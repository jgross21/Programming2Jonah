<CustBoxLayout@BoxLayout>:
    orientation: 'horizontal'
    spacing: .5

<CustButton@Button>:
    background_normal: ''
    background_color: (.85, .85, .85, 1)
    color: 0, 0, 0, 1

<OrangeButton@CustButton>:
    background_color: (1, 140/255, 0, 1)
    color: 0, 0, 0, 1


<CalculatorLayout>:
    spacing: .5
    orientation: 'vertical'
    display: display
    TextInput:
        id: display
        text:''
        background_normal: ''
        background_color: (.2, .2, .2, 1)
        font_size: 30
        foreground_color: [1, 1, 1, 1]
    CustBoxLayout:
        CustButton:
            text: 'AC'
            on_press: display.text = ''
            background_color: (.8, .8, .8, 1)
        CustButton:
            text: '('
            on_press: display.text += self.text
            background_color: (.8, .8, .8, 1)
        CustButton:
            text: ')'
            on_press: display.text += self.text
            background_color: (.8, .8, .8, 1)
        OrangeButton:
            text: '/'
            on_press: display.text += self.text
    CustBoxLayout:
        CustButton:
            text: '7'
            on_press: display.text += self.text
        CustButton:
            text: '8'
            on_press: display.text += self.text
        CustButton:
            text: '9'
            on_press: display.text += self.text
        OrangeButton:
            text: '*'
            on_press: display.text += self.text
    CustBoxLayout:
        CustButton:
            text: '4'
            on_press: display.text += self.text
        CustButton:
            text: '5'
            on_press: display.text += self.text
        CustButton:
            text: '6'
            on_press: display.text += self.text
        OrangeButton:
            text: '-'
            on_press: display.text += self.text
    CustBoxLayout:
        CustButton:
            text: '1'
            on_press: display.text += self.text
        CustButton:
            text: '2'
            on_press: display.text += self.text
        CustButton:
            text: '3'
            on_press: display.text += self.text
        OrangeButton:
            text: '+'
            on_press: display.text += self.text
    CustBoxLayout:
        CustButton:
            text: '0'
            size_hint_x: 2
            on_press: display.text += self.text
        CustButton:
            text: '.'
            size_hint_x: 1.001
            on_press: display.text += self.text
        OrangeButton:
            text: '='
            size_hint_x: 1
            on_press: root.calculate()